{{>navbar}}
<div class="container-fluid text-center">
    {{>flash}}
    <div id="find-nosh">
        <div id="radius-wheel"></div>
        <div id="cuisine-slider" class="carousel slide" data-interval="false">
            <div class="carousel-inner">
                {{#each cuisines}}
                    <div class="carousel-item {{~#if @first}} active{{/if}}" data-cuisine-id="{{cuisine_id}}">
                        <p class="cuisine"><i class="{{icon}} pe-5x"></i></p>
                        <div class="carousel-caption d-none d-md-block">
                            <p class="cuisine-name">{{cuisine_name}}</p>
                        </div>
                    </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#cuisine-slider" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#cuisine-slider" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <h4 class="mb-4 d-block">Use the dial to choose your search distance, and the arrows for the choice of
            cuisine.</h4>
        <button id="nosh-me" class="btn btn-danger btn-lg" type="button" role="button">nosh me!</button>
    </div>
</div>
<div id="resultsModal" class="modal fade" role="dialog" aria-hidden="true" aria-labelledby="resultsModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Your Options</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="results-container" class="container-fluid">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
